<div
  id="loader"
  class="fixed inset-0 z-50 bg-black flex items-center justify-center flex-col gap-6"
>
  <!-- Squid Game shapes -->
  <div class="flex items-center gap-6">
    <!-- Circle -->
    <div
      class="w-10 h-10 border-4 border-pink-500 rounded-full glow-delay-0"
    ></div>

    <!-- Triangle -->
    <div class="w-0 h-0 triangle glow-delay-1"></div>

    <!-- Square -->
    <div class="w-10 h-10 border-4 border-pink-500 glow-delay-2"></div>
  </div>

  <p class="text-white mt-4 text-sm tracking-wide font-medium animate-pulse">
    Loading Squid Game Universe...
  </p>
</div>

<style>
  /* Glow animation */
  @keyframes glow {
    0%,
    100% {
      opacity: 0.3;
    }
    50% {
      opacity: 1;
    }
  }

  .glow-delay-0,
  .glow-delay-1,
  .glow-delay-2 {
    animation: glow 1.8s infinite ease-in-out;
  }

  .glow-delay-0 {
    animation-delay: 0s;
  }

  .glow-delay-1 {
    animation-delay: 0.3s;
  }

  .glow-delay-2 {
    animation-delay: 0.6s;
  }

  /* Triangle using clip-path */
  .triangle {
    width: 40px;
    height: 40px;
    background-color: #ec4899; /* Tailwind pink-500 */
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  }
</style>
